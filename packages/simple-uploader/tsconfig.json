{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "tsdown.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}